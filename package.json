{
  "name": "extraterm",
  "version": "0.26.0",
  "description": "A terminal",
  "author": "Simon Edwards",
  "license": "MIT",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/sedwards2009/extraterm.git"
  },
  "scripts": {
    "run": "electron src/Main.js --dev-tools",

    "build-all": "npm run npm-install-extension-api ; npm run build ; npm run build-extensions",
    "build": "npm install extraterm-extension-api ; tsc",
    "build-extensions": "npm run npm-install-extension-api ; node src/build_scripts/npm_extensions.js build",
    "build-icons": "node src/extra_icons/build.js",

    "npm-install-all": "npm install ; npm run npm-install-extensions ; npm run electron-rebuild",
    "npm-install-extension-api": "npm install extraterm-extension-api ; node src/build_scripts/npm_extensions.js install-extension-api",
    "npm-install-extensions": "node src/build_scripts/npm_extensions.js install",

    "electron-rebuild": "node ./node_modules/electron-rebuild/lib/src/cli.js -o ptyw.js,font-manager -f -v 1.6.8",

    "testbulkdomoperation": "npm run build ; nodeunit src/BulkDomOperationTest.js",
    "testextensionloader": "npm run build ; nodeunit src/ExtensionLoaderTest.js",
    "testkeybindingmanager": "npm run build ; nodeunit src/KeyBindingManagerTest.js",
    "testmimetypedetector": "npm run build ; nodeunit src/MimeTypeDetectorTest.js",
    "testsplitlayout": "npm run build ; nodeunit src/SplitLayoutTest.js",
    "typedoc": "node src/build_scripts/prepare_typedoc.js && cd src && typedoc --target ES5 --name Extraterm --mode file --module amd --out typedocs build_tmp",
    "package": "node src/build_scripts/build_packages.js",
    "serve-test": "node src/test/httpserver.js"
  },
  "dependencies": {
    "codemirror": "5.27.4",
    "commander": "2.9.0",
    "element-resize-detector": "1.1.3",
    "font-manager": "0.2.2",
    "fontinfo": "0.3.0",
    "he": "0.5.0",
    "jschardet": "1.4.1",
    "lodash": "3.10.1",
    "markdown": "0.5.0",
    "node-sass": "4.5.3",
    "qs": "6.3.1",
    "source-map-support": "0.3.2",
    "utf8": "2.1.2",
    "vue": "1.0.10"
  },
  "optionalDependencies": {
    "ptyw.js": "0.4.0"
  },
  "devDependencies": {
    "@types/commander": "2.3.31",
    "@types/electron": "1.4.32",
    "@types/he": "0.5.29",
    "@types/lodash": "3.10.0",
    "@types/node": "7.0.5",
    "@types/node-sass": "3.10.32",
    "@types/nodeunit": "0.0.30",
    "@types/qs": "6.2.30",
    "@types/source-map-support": "0.2.28",
    "@types/utf8": "2.1.5",
    "cajon": "0.2.10",
    "electron": "1.6.8",
    "electron-packager": "8.7.0",
    "electron-rebuild": "1.6.0",
    "finalhandler": "0.4.0",
    "modclean": "2.1.0",
    "nodeunit": "0.11.0",
    "serve-static": "1.10.0",
    "shelljs": "0.7.8",
    "typedoc": "0.3.12",
    "typescript": "2.4.2",
    "webfont": "^4.0.0",
    "extraterm-extension-api": "file:./extraterm-extension-api/"
  },
  "jshintConfig": {
    "esversion": 6
  }
}
