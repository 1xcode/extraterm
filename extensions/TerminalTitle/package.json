{
  "name": "terminal-title",
  "description": "Terminal title and tab editing and configuration",
  "displayName": "Terminal Title",
  "version": "1.0.0",
  "windowMain": "dist/TerminalTitleExtension.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn run build-fast && yarn run lint",
    "build-fast": "tsc",
    "clean": "shx rm -rf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "lint-strict": "eslint --max-warnings 1 \"src/**/*.ts\"",
    "test": "yarn run build && jest"
  },
  "dependencies": {
    "extraterm-trim-between-tags": "1.0.0",
    "he": "1.2.0",
    "vue": "2.6.10",
    "vue-class-component": "6.3.2"
  },
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@types/he": "1.1.0",
    "@types/node": "^14.14.37",
    "eslint": "7.19.0",
    "eslint-config-extraterm": "1.0.0",
    "@extraterm/extraterm-extension-api": "0.14.0",
    "jest": "27.2.0",
    "shx": "^0.3.2",
    "typescript": "4.3.5"
  },
  "contributes": {
    "commands": [
      {
        "command": "terminal-title:editTitle",
        "title": "Edit Title",
        "category": "terminal",
        "icon": "fas fa-pen",
        "when": "terminalFocus"
      }
    ],
    "tabTitleWidgets": [
      {
        "name": "title"
      }
    ],
    "terminalBorderWidgets": [
      {
        "name": "edit-title",
        "border": "north"
      }
    ],
    "menus": {
      "terminalTab": [
        {
          "command": "terminal-title:editTitle",
          "show": true
        }
      ]
    },
    "sessionSettings": [
      {
        "id": "title",
        "name": "Tab Title"
      }
    ]
  }
}
