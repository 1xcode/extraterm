{
  "name": "extraterm-font-ligatures",
  "version": "1.0.0",
  "description": "Find ligature replacements for any system font",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn run build-fast && yarn run lint",
    "build-fast": "tsc",
    "lint": "eslint \"src/**/*.ts\"",
    "lint-strict": "eslint --max-warnings 1 \"src/**/*.ts\"",
    "watch": "tsc -w",
    "test": "yarn run build && ava dist/**/*.spec.js",
    "bench": "node --expose-gc bench/all.js"
  },
  "keywords": [
    "font",
    "opentype",
    "truetype",
    "ligature"
  ],
  "author": "Jeff Principe <princjef@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "extraterm-char-cell-line": "1.0.0",
    "font-finder": "^1.1.0",
    "lru-cache": "^4.1.3",
    "opentype.js": "^1.3.1"
  },
  "devDependencies": {
    "@types/lru-cache": "^4.1.0",
    "@types/node": "^16.4.0",
    "@types/opentype.js": "^1.3.3",
    "ava": "4.1.0",
    "chalk": "^2.4.1",
    "codecov": "^3.6.5",
    "columnify": "^1.5.4",
    "eslint": "8.13.0",
    "eslint-config-extraterm": "1.0.0",
    "eslint-plugin-unicorn": "42.0.0",
    "husky": "^0.14.3",
    "opener": "^1.4.3",
    "pretty-bytes": "^5.0.0",
    "rimraf": "^2.6.2",
    "simple-statistics": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "4.7.4"
  },
  "ava": {
    "nodeArguments": [
      "--experimental-vm-modules"
    ]
  }
}
