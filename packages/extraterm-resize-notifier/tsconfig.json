{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "outDir": ".",
        "rootDir": "src",
        "jsx": "react",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "typeRoots" : ["./src/typings"],
        "paths": {
         "*": ["./src/typings/*"]
        }      
    },
    "filesGlob": [
        "./src/*.ts",
        "./src/test/*.ts"
    ],
    "exclude": [
        "./*.ts",
        "./test/*.ts"
    ]
}
