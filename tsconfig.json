{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es2022",
        "module": "ES2020",
        "declaration": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true
    }
}
